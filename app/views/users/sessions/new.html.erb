<main>
  <div class="sign-wrapper">

    <div class="sign-title">
      <p>ログイン</p>
    </div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field-box">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス", class: "sign-input" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "sign-input" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "sign-submit" %>
      </div>
      <% end %>

      <div class="other">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</main>