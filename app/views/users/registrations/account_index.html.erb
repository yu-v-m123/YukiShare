<main>

  <div class="setting-wrapper">

    <div class="account-title-container">
      <div class="account-title-main">
        <%= link_to "アカウント", account_user_registration_path, {class: "account-title-main-a"} %>
      </div>
      <div class="profile-title">
        <%= link_to "プロフィール", profile_user_registration_path, {class: "profile-title-a"} %>
      </div>
    </div>

    <div class="account-container">
      <div class="account-box">

        <div class="account-box-title">
          <p class="account-box-title-p">
            アカウント
        </div>

        <div class="account-field">
          <p>メールアドレス</p>
          <div class="account-email">
            <%= current_user.email %>
          </div>
        </div>

        <div class="account-field">
          <p>パスワード</p>
          <div class="account-password">
            <%= current_user.password %>
            <p>********</p>
          </div>
        </div>

        <div class="setting-action">
          <%= link_to "編集", edit_user_registration_path, {class: "setting-btn"} %>
        </div>
        
      </div>
    </div>
  </div>
</main>